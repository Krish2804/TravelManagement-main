@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bg-orange p-5">
    <h2>Register</h2>

    <form>
        <div class="form-group d-flex">
            <label class="text-white form-label">First Name</label>
            <input type="text" class="form-control w-50 " />
            <label class="text-white">Last Name</label>
            <input type="text" class="form-control w-50 " />
        </div>

        <div class="form-group d-flex ">
            <label class="text-white">Date of birth</label>
            <input type="text" class="form-control w-50 " />
            <label class="text-white">Age</label>
            <input type="text" class="form-control w-50 " />
        </div>

        <div class="form-group d-flex ">
            <label class="text-white">Employee Id</label>
            <input type="text" class="form-control w-50 " />
            <label class="text-white">Employee Role</label>
            <input type="text" class="form-control w-50 " />
        </div>

        <div class="form-group d-flex ">
            <label class="text-white">Department</label>
            <input type="text" class="form-control w-50 " />
            <label class="text-white">Contact number</label>
            <input type="text" class="form-control w-50 " />
        </div>

        <div class="form-group d-flex ">
            <label class="text-white">Email Id</label>
            <input type="text" class="form-control w-50   " />
            <label class="text-white">Address</label>
            <textarea class="form-control w-50 "></textarea>
        </div>
        <div class="btn-custom p-2 mx-auto">
            <input type="button" class="btn btn-dark text-white w-25" value="Submit" />
        </div>
    </form>
</section>
